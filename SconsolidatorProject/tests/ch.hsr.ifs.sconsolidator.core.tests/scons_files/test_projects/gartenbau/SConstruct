env = Environment()
env.Append(CPPDEFINES={'Foo': 42, 'Bar': 'YES'})
env.Append(CPPPATH=['cute/', 'src/shapes', '/usr/include/xorg'])
env.Append(CCFLAGS='-O3')
env.Append(CXXFLAGS='-O3 -std=c++11')
env.StaticLibrary('gartenbau', Glob('src/shapes/*.cpp'))
env.Program('test/gartenbau_tests.cpp', LIBS=['gartenbau'], LIBPATH='.')
